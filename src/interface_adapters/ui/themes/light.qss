/* light.qss
    Tema claro para la aplicaci√≥n. */

@import "base.qss";

QMenuBar {
    background: #f5f5f5;
    color: #222;
}
QMenuBar::item:selected {
    background: #e0e0e0;
}
QMenuBar::item:disabled {
    color: #bdbdbd;
    background: #f5f5f5;
    opacity: 0.5;
}
QMenu {
    background: #ffffff;
    color: #222;
}
QMenu::item:selected {
    background: #1976d2;
    color: #fff;
}
QMenu::item:disabled {
    color: #bdbdbd;
    background: #ffffff;
    opacity: 0.5;
}


QPushButton#AddOperatorButton {
    background-color: #388e3c;
    color: #fff;
    border-radius: 6px;
    padding: 6px 18px;
    font-weight: bold;
    border: none;
}
QPushButton#AddOperatorButton:hover {
    background-color: #43a047;
}
QPushButton#AddOperatorButton:pressed {
    background-color: #2e7031;
}
QPushButton#AddOperatorButton:disabled {
    background-color: #bdbdbd;
    color: #f5f5f5;
    border: none;
    opacity: 0.7;
}

QPushButton#DeleteOperatorButton {
    background-color: #d32f2f;
    color: #fff;
    border-radius: 6px;
    padding: 6px 18px;
    font-weight: bold;
    border: none;
}
QPushButton#DeleteOperatorButton:hover {
    background-color: #b71c1c;
}
QPushButton#DeleteOperatorButton:pressed {
    background-color: #7f1010;
}
QPushButton#DeleteOperatorButton:disabled {
    background-color: #bdbdbd;
    color: #f5f5f5;
    border: none;
    opacity: 0.7;
}


QWidget {
    background-color: #f5f5f5;
    color: #222;
}

QMainWindow {
    background-color: #ffffff;
}

QLabel#summary-label {
    border: 1px solid #bdbdbd;
    border-radius: 4px;
    padding: 6px;
    background: #fafafa;
    color: #222;
}

QLabel#ClockTimeOA, QLabel#ClockLabelOA, QLabel#ClockDateOA { color: #b71c1c; }
QLabel#ClockTimeUTC, QLabel#ClockLabelUTC, QLabel#ClockDateUTC { color: #1b5e20; }

QListWidget#ContactQueueList::item {
    outline: none;
    border: 2px solid #64b5f6;
    background: transparent;
    color: #222;
    border-radius: 8px;
    margin: 2px 8px;
    padding: 2px 8px;
    min-width: 0px;
    font-weight: bold;
    min-height: 28px;
    max-height: 32px;
}
QListWidget#ContactQueueList::item:focus {
    outline: none;
    border: 2px solid #64b5f6;
    background: transparent;
    color: #222;
    border-radius: 8px;
    margin: 2px 8px;
    padding: 2px 8px;
    min-width: 0px;
    font-weight: bold;
    min-height: 28px;
    max-height: 32px;
}
QListWidget#ContactQueueList::item:selected {
    background: #64b5f6;
    color: #222;
}

/* CallsignSuggestionList: Estilo para sugerencias de indicativos (tema claro) */
QListWidget#callsignSuggestionList::item {
    color: #1976d2;
    font-weight: bold;
}

QLineEdit#callsignInput {
    border: 2px solid #444444;
    border-radius: 6px;
    padding: 4px 8px;
}
QLineEdit#callsignInput:focus {
    border: 2px solid palette(highlight);
}

QLabel#callsignSummary {
    border: 2px solid #444444;
    border-radius: 6px;
    padding: 4px 8px;
}
QLabel#callsignSummary:focus {
    border: 2px solid palette(highlight);
}

QListWidget#callsignSuggestionList {
    border: 2px solid #444444;
    border-radius: 6px;
    padding: 4px 8px;
}
QListWidget#callsignSuggestionList:focus {
    border: 2px solid palette(highlight);
}



